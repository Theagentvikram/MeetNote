# Production Environment Configuration for MeetNote Backend

# Application
ENVIRONMENT=production
DEBUG=false

# Supabase Database (get from https://supabase.com/dashboard/project/_/settings/database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
DATABASE_URL=postgresql://user:password@host:port/database

# Security - Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production

# OpenRouter API for AI Summarization
# Get free API key at: https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# Whisper Model Settings (optimized for production)
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
SAMPLE_RATE=16000

# Audio Processing
MAX_AUDIO_SIZE=25000000

# CORS Origins (production domains)
CORS_ORIGINS=https://meetnoteapp.netlify.app,https://meetnote-app.netlify.app
